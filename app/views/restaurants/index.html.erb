<h1>Restaurants List</h1>
<div class="container d-flex justify-content-start mx-0 px-0">
  <ul class="list-group">
    <% @restaurants.each do |restaurant| %>
      <li class="list-group-item d-flex justify-content-between align-items-center"><%= link_to restaurant.name, restaurant_path(restaurant) %>
      </li>
    <% end %>
  </ul>
</div>
<p class="my-1"><%= link_to '+ add a new restaurant', new_restaurant_path %></p>
